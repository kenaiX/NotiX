<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 电池外框 -->
    <item
        android:id="@android:id/background"
        android:drawable="@drawable/gamemode_battery_background"/>
    <!-- 电池芯 -->
    <item
        android:id="@+id/battery_core"
        android:bottom="@dimen/aod_battery_core_bottom"
        android:left="@dimen/aod_battery_core_left"
        android:right="@dimen/aod_battery_core_right"
        android:top="@dimen/aod_battery_core_top">
        <scale
            android:drawable="@drawable/gamemode_battery_core_normal"
            android:scaleGravity="right"
            android:scaleWidth="100%"
            android:scaleHeight="0%" />
    </item>

</layer-list>