<?xml version="1.0" encoding="utf-8"?>

<com.flyme.systemuitools.gamemode.view.GameModeWindow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.flyme.systemuitools.gamemode.view.StageView
        android:layout_width="@dimen/game_mode_proview_width"
        android:layout_height="@dimen/game_mode_proview_height"
        android:layout_centerInParent="true"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <com.flyme.systemuitools.gamemode.view.HeadView
            android:id="@+id/gamemode_head_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/game_mode_proview_head_height"
            tools:layout_editor_absoluteY="29dp">

            <ImageView
                android:id="@+id/gamemode_panda"
                android:layout_width="@dimen/game_mode_proview_head_panda_size"
                android:layout_height="@dimen/game_mode_proview_head_panda_size"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:src="@drawable/game_panda" />

            <com.flyme.systemuitools.gamemode.view.BatteryView
                android:id="@+id/gamemode_battery_frame"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:layout_toRightOf="@id/gamemode_panda">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.flyme.systemuitools.gamemode.view.BatteryIconView
                            android:id="@+id/gamemode_battery_icon"
                            android:layout_width="21.33dp"
                            android:layout_height="11.33dp" />

                        <TextView
                            android:id="@+id/gamemode_battery_level"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            android:gravity="center"
                            android:textSize="14sp"
                            tools:text="test" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/gamemode_baterry_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gamemode_battery_level"
                        android:textColor="#66000000"
                        android:textSize="11sp"
                        android:visibility="visible"
                        tools:text="test" />

                </LinearLayout>

            </com.flyme.systemuitools.gamemode.view.BatteryView>

            <ImageView
                android:id="@+id/gamemode_more_menu"
                android:layout_width="@dimen/game_mode_proview_quick_apps_width"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="6dp"
                android:paddingLeft="@dimen/game_mode_proview_apps_padding"
                android:paddingRight="@dimen/game_mode_proview_apps_padding"
                android:src="@drawable/gamemode_more_apps_menu" />

            <com.flyme.systemuitools.gamemode.view.QuickAppsView
                android:id="@+id/gamemode_quick_apps_frame"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_toStartOf="@+id/gamemode_more_menu">

                <ImageView
                    android:id="@+id/gamemode_quick_app_3"
                    android:layout_width="@dimen/game_mode_proview_quick_apps_width"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/game_mode_proview_apps_padding"
                    android:paddingRight="@dimen/game_mode_proview_apps_padding"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/gamemode_quick_app_2"
                    android:layout_width="@dimen/game_mode_proview_quick_apps_width"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/game_mode_proview_apps_padding"
                    android:paddingRight="@dimen/game_mode_proview_apps_padding"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/gamemode_quick_app_1"
                    android:layout_width="@dimen/game_mode_proview_quick_apps_width"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/game_mode_proview_apps_padding"
                    android:paddingRight="@dimen/game_mode_proview_apps_padding"
                    android:src="@mipmap/ic_launcher" />
            </com.flyme.systemuitools.gamemode.view.QuickAppsView>
        </com.flyme.systemuitools.gamemode.view.HeadView>


        <LinearLayout
            android:id="@+id/gamemode_tab_frame"
            android:layout_width="match_parent"
            android:layout_height="@dimen/game_mode_proview_tab_height"
            android:layout_below="@id/gamemode_head_frame"
            android:background="#0A000000"
            android:orientation="horizontal">

            <include
                android:id="@+id/gamemode_tab_noti"
                layout="@layout/gamemode_pro_tab_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <include
                android:id="@+id/gamemode_tab_game"
                layout="@layout/gamemode_pro_tab_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/gamemode_tab_settings"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/game_mode_pro_settings" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.67dp"
            android:layout_below="@id/gamemode_head_frame"
            android:background="#FFF5F5F5" />

        <FrameLayout
            android:id="@+id/gamemode_detail_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/gamemode_tab_frame" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/gamemode_tab_frame"
            android:background="@drawable/gamemode_pro_shadow" />

        <com.flyme.systemuitools.gamemode.view.MoreAppsView
            android:id="@+id/gamemode_more_apps_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/gamemode_head_frame"
            android:background="#FFFFFF"
            android:visibility="invisible">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/gamemode_pro_shadow" />

            <TextView
                android:id="@+id/gamemode_more_apps_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="@string/game_mode_pro_summary"
                android:textColor="#66000000"
                android:textSize="11sp" />

            <ListView
                android:id="@+id/gamemode_more_apps_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/gamemode_more_apps_summary"
                android:divider="@null"
                android:overScrollMode="never"
                android:scrollbarSize="4dp"
                android:scrollbarThumbVertical="@drawable/gamemode_scroll_bar_bg" />
        </com.flyme.systemuitools.gamemode.view.MoreAppsView>

        <ImageView
            android:id="@+id/gamemode_dragView"
            android:layout_width="@dimen/game_mode_proview_apps_size"
            android:layout_height="@dimen/game_mode_proview_apps_size" />

        <com.flyme.systemuitools.gamemode.view.FullView
            android:id="@+id/gamemode_full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:visibility="gone" />

    </com.flyme.systemuitools.gamemode.view.StageView>
</com.flyme.systemuitools.gamemode.view.GameModeWindow>