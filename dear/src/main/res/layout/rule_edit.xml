<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rule_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding_large"
    tools:context=".RuleEditActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/d_pkg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="应用" />


        <ImageView
            android:id="@+id/pkg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            tools:src="@mipmap/ic_launcher_round" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/d_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="标题" />

        <Button
            android:id="@+id/button_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:onClick="onEditButtonClick"
            android:text="匹配所有" />

        <EditText
            android:id="@+id/title"
            android:hint="支持正则匹配"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/button_title"
            android:layout_toEndOf="@+id/d_title" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/d_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="内容" />

        <Button
            android:id="@+id/button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:onClick="onEditButtonClick"
            android:text="匹配所有" />

        <EditText
            android:id="@+id/text"
            android:hint="支持正则匹配"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/button_text"
            android:layout_toEndOf="@+id/d_text" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提醒" />

        <cc.kenai.noti.view.NotiTypeViewGroup
            android:id="@+id/notitype_group"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/notitype_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="声音"/>

            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/notitype_loop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="循环"/>


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/notitype_ring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="响铃"/>


            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/notitype_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="亮屏"/>

        </cc.kenai.noti.view.NotiTypeViewGroup>

    </LinearLayout>

    <Button
        android:id="@+id/commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存" />
</LinearLayout>